# ============ Aliases =====================
    
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"



# reload zshrc
alias reload='. ~/.zshrc'

# command alias
alias cls='clear'

# Shortcuts
alias o='open'
alias oo='open .'
alias v='vim'
alias x+='chmod +x'
alias py='python3'
alias pip='pip3'

# mv, rm, cp, ...
alias mv='mv -v'
alias rm='rm -i -v'
alias cp='cp -v'


# Dotfiles quick edit
alias vimz='vim $HOME/.zshrc'
alias vimzl='vim $HOME/.zsh.local'
alias vimh='vim $HOME/.hyper.js'
alias vimt='vim $HOME/.tmux.conf'
alias vima='vim $HOME/.shell/shell_alias'
alias vimv='vim $HOME/.vimrc'
alias vimfd='vim $HOME/.functions/dev_finctions'
alias vimfo='vim $HOME/.functions/other_functions'
alias vimfs='vim $HOME/.functions/shell_functions'

# For adb
alias adbc='adb connect'
alias adbd='adb devices'
alias devices='adb devices'
alias acon='adb connect'
alias connect='adb connect'
alias discon='adb disconnect'


# For git
alias 'git l'='git log --oneline --decorate --graph --color'

# Work faster
alias parse_chr='py $HOME/Dev/Py/charles-session-parse/parser.py'


alias tapk='cd $HOME/WishWork/turncloud-android/app/build/outputs/apk'
alias tsup='cd $HOME/WishWork/turnstore_support'
alias fapk='cd $HOME/WishWork/farglory-android/app/build/outputs/apk'

alias tapk_skm='cd $HOME/WishWork/turncloud-skm-china/app/build/outputs/apk'
alias skm_sup='cd $HOME/WishWork/turnstore_skm_support'
alias skm_apk='tapk_skm'
